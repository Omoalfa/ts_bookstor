{
  "name": "bookstore_backend",
  "version": "1.0.0",
  "description": "Legace backend for the bookstore platform app",
  "main": "index.ts",
  "scripts": {
    "build:prod": "npm install && npm run migrate:latest",
    "migrate:make": "knex --knexfile src/Database/knexfile.ts migrate:make",
    "migrate:latest": "knex --knexfile src/Database/knexfile.ts migrate:latest",
    "migrate:rollback": "knex --knexfile src/Database/knexfile.ts migrate:rollback",
    "seed:make": "knex --knexfile src/Database/knexfile.ts seed:make",
    "seed:run": "knex --knexfile src/Database/knexfile.ts seed:run",
    "start": "cross-env NODE_OPTIONS=--max-old-space-size=400 ts-node -r tsconfig-paths/register --transpile-only index.ts",
    "dev": "nodemon",
    "test": "cross-env NODE_ENV=test npm run migrate:latest && cross-env NODE_ENV=test ts-mocha --paths -p ./tsconfig.json test/**/*.spec.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Omoalfa/ts_bookstore"
  },
  "author": "Omoalfa",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "googleapis": "^124.0.0",
    "jsonwebtoken": "^9.0.1",
    "knex": "^2.4.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.4",
    "pg": "^8.11.1",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.6.0",
    "typedi": "^0.10.0",
    "typescript": "^5.1.6",
    "winston": "^3.9.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/expect": "^24.3.0",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/mocha": "^10.0.1",
    "@types/morgan": "^1.9.4",
    "@types/nodemailer": "^6.4.9",
    "chai": "^4.3.7",
    "chai-http": "^4.4.0",
    "cross-env": "^7.0.3",
    "nodemon": "^2.0.22",
    "ts-mocha": "^10.0.0"
  }
}
